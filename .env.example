# ============================================
# Environment Configuration Example
# ============================================
# Copia este archivo a .env y configura seg√∫n tu entorno
# Este archivo es solo una plantilla - NUNCA comitear valores sensibles

# ============================================
# DOCKER & COMPOSE CONFIGURATION
# ============================================
COMPOSE_PROJECT_NAME=pokemon_bff
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================

DB_DATABASE=pokemon_bff


DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root

# Alternative for MySQL (si usas MySQL)
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=pokemon_bff
# DB_USERNAME=root
# DB_PASSWORD=root

# ============================================
# REDIS CACHE CONFIGURATION
# ============================================
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# ============================================
# MAIL CONFIGURATION (MailHog for Development)
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@pokemon-bff.local
MAIL_FROM_NAME="Pokemon BFF"

# ============================================
# LARAVEL APPLICATION CONFIGURATION
# ============================================
APP_NAME="Pokemon BFF"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=base64:your_app_key_here
APP_TIMEZONE=UTC

# Generate with: php artisan key:generate

# ============================================
# JWT AUTHENTICATION CONFIGURATION
# ============================================
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=3600

# Generate strong secret: openssl rand -hex 32

# ============================================
# EXTERNAL APIs CONFIGURATION
# ============================================
POKEAPI_URL=https://pokeapi.co/api/v2
POKEAPI_TIMEOUT=30
POKEAPI_CACHE_TTL=86400

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=

# ============================================
# PHP CONFIGURATION
# ============================================
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=30
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

# ============================================
# CONTAINER PORTS
# ============================================
PHP_PORT=9000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
DB_PORT=5432
REDIS_PORT=6379
NEXT_PORT=3000
ADMINER_PORT=8080
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# ============================================
# CONTAINER USER ID (Linux users)
# ============================================
CONTAINER_UID=1000
CONTAINER_GID=1000

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSED_HEADERS=Content-Range,X-Content-Range
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_WINDOW=60

# ============================================
# AWS CONFIGURATION (si usas S3 para storage)
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=

# ============================================
# SENTRY ERROR TRACKING (Opcional)
# ============================================
# SENTRY_DSN=

# ============================================
# STRIPE PAYMENT (Opcional)
# ============================================
# STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
